<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:elevation="6dp"
    android:background="@color/primary_dark_material_dark"
    >

    <TextView android:text="Caaaaaampus Quest!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:elevation="7dp"
        android:textColor="#FFFFFF"
        android:textColorHighlight="@color/primary_material_light"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/ic_main_splash2"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="83dp"
        android:layout_height="26dp"
        android:text="Log In"
        android:id="@+id/idBtnLogIn"
        android:onClick="login"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:layout_alignTop="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView3"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_crossroad"/>

    <Button
        android:layout_width="83dp"
        android:layout_height="26dp"
        android:text="Register"
        android:id="@+id/idBtnRegister"
        android:layout_marginTop="12dp"
        android:elegantTextHeight="false"
        android:singleLine="false"
        android:background="#ffffff"
        android:layout_below="@+id/idBtnLogIn"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#ffffff"
        android:clickable="true"
        android:onClick="register" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/idTxtUsername"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toStartOf="@+id/idBtnLogIn"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:visibility="invisible"
        android:background="#4a4848"
        android:clickable="true"
        android:cursorVisible="true"
        android:singleLine="true"
        android:focusable="true"
        android:hint="  Username"
        android:layout_alignEnd="@+id/idBtnLogIn"
        android:layout_marginBottom="2dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/idTxtEmail"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:visibility="invisible"
        android:background="#4a4848"
        android:clickable="true"
        android:cursorVisible="true"
        android:singleLine="true"
        android:focusable="true"
        android:hint="  Email@email.com"
        android:layout_below="@+id/idTxtUsername"
        android:layout_alignStart="@+id/idTxtUsername"
        android:layout_marginBottom="2dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/idTxtPassword"
        android:textColor="#ffffff"
        android:background="#4a4848"
        android:visibility="invisible"
        android:clickable="true"
        android:cursorVisible="true"
        android:password="true"
        android:singleLine="true"
        android:textIsSelectable="false"
        android:focusable="true"
        android:hint="  Password"
        android:layout_below="@+id/idTxtEmail"
        android:layout_alignStart="@+id/idTxtConfirmPassword"
        android:layout_marginBottom="2dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/idTxtConfirmPassword"
        android:textColor="#ffffff"
        android:background="#4a4848"
        android:visibility="invisible"
        android:clickable="true"
        android:cursorVisible="true"
        android:password="true"
        android:singleLine="true"
        android:textIsSelectable="false"
        android:focusable="true"
        android:hint="  Confirm Password"
        android:layout_below="@+id/idTxtPassword"
        android:layout_alignEnd="@+id/idBtnRegister"
        android:layout_marginBottom="2dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/idBtnRegisterSubmit"
        android:clickable="true"
        android:visibility="invisible"
        android:layout_below="@+id/idTxtConfirmPassword"
        android:layout_alignParentStart="true"
        android:onClick="submit" />


</RelativeLayout>
